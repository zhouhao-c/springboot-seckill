<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zz.seckill.Dao.mapper.GoodsMapper" >
    <select id="queryPageCount" resultType="int">
        select
        count(*) from tb_goods
        <where>
            <if test="queryText != null">
                and name like concat('%',#{queryText},'%')
            </if>
        </where>;
    </select>

    <select id="queryPageData" resultType="com.zz.seckill.bean.Goods">
        select * from tb_goods
        <where>
            <if test="queryText != null">
                and name like concat('%',#{queryText},'%')
            </if>
        </where>
        order by create_time desc
        limit #{start},#{size};
    </select>
    <select id="queryById" resultType="com.zz.seckill.bean.Goods">
        select * from tb_goods where id=#{id}
    </select>
    <select id="queryByNumber" resultType="com.zz.seckill.bean.Goods">
        select * from tb_goods where number=#{number}
    </select>
    <update id="updateGoods">
        update tb_goods
        set name = #{name}, number = #{number},start_time = #{startTime},end_time = #{endTime}
        where id = #{id}
    </update>

    <delete id="deleteGoodsById">
        delete from tb_goods where id=#{id}
    </delete>
</mapper>